{
  "name": "xphere-mining-cloud",
  "private": true,
  "version": "1.0.0",
  "description": "Xphere Cloud Mining Platform - Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "pnpm --filter @xphere/frontend dev",
    "dev:backend": "pnpm --filter @xphere/backend dev",
    "build": "turbo run build",
    "build:frontend": "pnpm --filter @xphere/frontend build",
    "build:backend": "pnpm --filter @xphere/backend build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
